<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/img_bottom_sheet_background"
        tools:context=".ui.home.profile.BottomSheetFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:background="@drawable/ic_bottom_sheet_header"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_take_a_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_take_photo"
            android:drawablePadding="8dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="@string/take_a_photo"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/line"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_choose_from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_open_photo_lib"
            android:drawablePadding="8dp"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="@string/choose_from_gallery"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>